<p style="color: green"><%= notice %></p>

  <p>
    <strong>Home:</strong>
    <%= @page.home %>
  </p>

  <p>
    <strong>User:</strong>
    <%= @page.user_id %>
  </p>

<% @page.images.each do |picture| %>

<% if picture.image? %>
  <%= link_to image_tag(picture, class: "img_upload"), picture %>
  <% elsif picture.video? %>
   <%= link_to picture.filename, picture %>
  <% else %>
  <%= link_to picture.filename, picture %>
  <%= link_to "Download",  rails_blob_path(picture, disposition: "attachment")%>
<% end %>



<% end %>

<style>

.img_upload{
   border: 1px solid #ddd;
  border-radius: 4px;
  padding: 5px;
  width: 150px;
}

</style>

<div>
  <%= link_to "Edit this page", edit_page_path(@page) %> |
  <%= link_to "Back to pages", pages_path %>

  <%= button_to "Destroy this page", @page, method: :delete %>
</div>
