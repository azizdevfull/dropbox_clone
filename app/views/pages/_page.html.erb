

  <% if page.images.attached? %>

    <% page.images.each do |picture| %>

      <% if picture.image? %>
        <%= link_to image_tag(picture, class: "img_upload"), picture %>
      <% elsif picture.video? %>
        <%= link_to picture.filename, picture %>
      <% else %>
        <%= link_to picture.filename, picture %>
        <%= link_to "Download",  rails_blob_path(picture, disposition: "attachment")%>
      
      
      <% end %>

      <%= button_to "Destroy this page", page, method: :delete %>

    <% end %>

  <% end %>
    
